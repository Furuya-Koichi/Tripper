.headernav
  .headeruppercontent
    .headeruppercontent__title
      %i.fa.fa-plane
      Tripper
  .headerusericon
    %text
      = current_user.name

  .headerundercontent
    .headerundercontent__btn
    - if user_signed_in?
      .headerundercontent__btn--useredit
        = link_to edit_user_path(current_user) do
          ログアウト
    - else 
      .headerundercontent__btn--regist
        = link_to '/users/sign_up' do
          新規登録
      .headerundercontent__btn--login
        = link_to '/users/sign_in' do
          ログイン
        
