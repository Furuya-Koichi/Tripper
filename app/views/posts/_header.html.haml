.headernav
  .headeruppercontent
    .headeruppercontent__title
      %i.fa.fa-plane
      Tripper
  .headerusericon
    %text
      = current_user.name

  .headerundercontent
    .headerundercontent__btn
    - if user_signed_in?
      .headerundercontent__btn--useredit
        = link_to edit_user_path(current_user) do
          編集
    - else
      .headerundercontent__btn--regist
        = link_to new_user_registration_path do
          新規登録
      .headerundercontent__btn--login
        -# = link_to ,new_user_registration_path,
        ログイン

        
      - if user_signed_in?
        .user_nav.grid-6
          = link_to "ログアウト", destroy_user_session_path, method: :delete
      - else
        .grid-6
          = link_to "ログイン", new_new_user_registration_path, class: 'post'
          = link_to "新規登録", new_user_registration_path, class: 'post'
